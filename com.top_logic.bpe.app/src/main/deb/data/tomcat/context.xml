<Context>
	<Resource name="jdbc/toplogic"
		type="javax.sql.DataSource"
		url="{dbURL}/{dbSchema}"
		driverClassName="{dbDriver}" 
		username="{dbUser}"
		password="{dbPasswd}"
		auth="Container" 
		maxTotal="100" 
		maxIdle="30"
		maxWaitMillis="10000" />

	<Environment name="tl/tl_storage_path"
		value="/var/lib/tomcat9/work/{contextName}"
		type="java.lang.String"
		override="false"
	/>
	<Environment name="tl/tl_autoconf_dir"
		value="/var/lib/tomcat9/work/{contextName}/autoconf"
		type="java.lang.String"
		override="false"
	/>
	<Environment name="tl/tl_log_dir"
		value="/var/log/tomcat9/{contextName}"
		type="java.lang.String"
		override="false"
	/>
</Context>