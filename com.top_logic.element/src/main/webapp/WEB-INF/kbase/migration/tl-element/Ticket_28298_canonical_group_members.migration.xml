		module="tl-element"
	/>
	<dependencies>
		<dependency name="Ticket_27906_polymorphic_format_annotations"
			module="tl"
		/>
		<dependency name="Ticket_28263_add_deletion_policy_to_reference"
			module="tl-element"
		/>
	</dependencies>
	<processors>
