<?xml version="1.0" encoding="utf-8" ?>

<model xmlns="http://www.top-logic.com/ns/dynamic-types/6.0">
	<module name="Contacts">
		<class name="PersonContact">
			<annotations>
				<dynamic-icon>
					<icon-by-expression>
						<icon>contact -&gt; if ($contact.get(`Contacts:PersonContact#account`) == null, icon("css:far fa-user"))</icon>
					</icon-by-expression>
				</dynamic-icon>
				<form-definition>
					<form>
						<group>
							<field
								attribute="firstname"
								fullQualifiedName="Contacts:Contact.Person#firstname"
								type="tl.core:String"
							/>
							<field
								attribute="name"
								fullQualifiedName="Contacts:Contact.all#name"
								type="tl.core:String"
							/>
							<field
								attribute="title"
								fullQualifiedName="Contacts:Contact.Person#title"
								type="tl.core:String"
							/>
							<label key="dynamic.1f5a7ca7-6bc0-405d-b2f8-6ebf4e87dbe8">
								<en>User data</en>
								<de>Nutzerdaten</de>
							</label>
						</group>
						<foreign-objects
							items="x -> $x.get(`Contacts:PersonContact#account`)"
							label="`tl.accounts:Person`.toString()"
							type="tl.accounts:Person"
						/>
						<group>
							<field
								attribute="email"
								fullQualifiedName="Contacts:Contact.all#email"
								type="tl.core:String"
							/>
							<field
								attribute="phone"
								fullQualifiedName="Contacts:Contact.all#phone"
								type="tl.core:String"
							/>
							<field
								attribute="phone_mobile"
								fullQualifiedName="Contacts:Contact.Person#phone_mobile"
								type="tl.core:String"
							/>
							<field
								attribute="phone_private"
								fullQualifiedName="Contacts:Contact.Person#phone_private"
								type="tl.core:String"
							/>
							<field
								attribute="fax"
								fullQualifiedName="Contacts:Contact.Person#fax"
								type="tl.core:String"
							/>
							<field
								attribute="company"
								fullQualifiedName="Contacts:Contact.Person#company"
								type="Contacts:Contact.Company"
							/>
							<label key="dynamic.10c2421b-b394-4ddc-bad2-d07e2c18b5a3">
								<en>Contact details</en>
								<de>Kontaktdaten</de>
							</label>
						</group>
						<group>
							<field
								attribute="remarks"
								fullQualifiedName="Contacts:Contact.all#remarks"
								type="tl.core:String"
							>
								<annotations>
									<label-position value="hide-label"/>
								</annotations>
							</field>
							<label key="dynamic.ce2445e8-bec3-40e9-b69f-788a7c1cc566">
								<en>Remarks</en>
								<de>Bemerkungen</de>
							</label>
						</group>
						<other-attributes/>
					</form>
				</form-definition>
				<instance-resolver>
					<resolver-by-expression>
						<identity><![CDATA[contact -> {
    account = $contact.get(`Contacts:PersonContact#account`);
    $account == null 
    ? "name:" + $contact.get(`Contacts:PersonContact#fullName`)
    : "account:" + $account.get(`tl.accounts:Person#name`)
}]]></identity>
						<resolver><![CDATA[id -> switch {
    $id.stringStartsWith("account:"): {
        login = $id.subString("account:".length());
        all(`tl.accounts:Person`)
            .filter(p -> $p.get(`tl.accounts:Person#name`) == $login)
            .singleElement()
            .get(`tl.accounts:Person#contact`)
    };
    
    $id.stringStartsWith("name:"): {
        fullName = $id.subString("name:".length());
        all(`Contacts:PersonContact`)
            .filter(p -> $p.get(`Contacts:PersonContact#fullName`) == $fullName)
            .singleElement()
    };
    
    default: throw("Invalid contact ID: " + $id);
}]]></resolver>
					</resolver-by-expression>
				</instance-resolver>
			</annotations>
		</class>
	</module>
</model>