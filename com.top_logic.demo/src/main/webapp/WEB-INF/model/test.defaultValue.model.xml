<?xml version="1.0" encoding="utf-8" ?>

<model xmlns="http://www.top-logic.com/ns/dynamic-types/6.0">
	<module name="test.defaultValue">
		<class name="ReferringObject">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<form-definition>
					<form>
						<field
							attribute="name"
							fullQualifiedName="test.defaultValue:ReferringObject#name"
							type="tl.core:String"
						/>
						<field
							attribute="rowObject"
							fullQualifiedName="test.defaultValue:ReferringObject#rowObject"
							type="test.defaultValue:RowObject"
						/>
					</form>
				</form-definition>
			</annotations>
			<attributes>
				<reference name="rowObject"
					composite="true"
					kind="forwards"
					multiple="true"
					navigate="true"
					ordered="true"
					type="RowObject"
				/>
				<property name="name"
					type="tl.core:String"
				>
					<annotations>
						<storage-algorithm>
							<query>
								<expr>"Demoobjekt_" + numberFormat("#00").format(all(`test.defaultValue:ReferringObject`).size())</expr>
							</query>
						</storage-algorithm>
					</annotations>
				</property>
			</attributes>
		</class>
		<class name="RowObject">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<property name="integerField"
					type="tl.core:Integer"
				>
					<annotations>
						<default-value>
							<default-by-expression>
								<value><![CDATA[declaringObject -> {
 rows = $declaringObject.get(`test.defaultValue:ReferringObject#rowObject`);
 $rows.size()
}]]></value>
							</default-by-expression>
						</default-value>
					</annotations>
				</property>
			</attributes>
		</class>
	</module>
</model>