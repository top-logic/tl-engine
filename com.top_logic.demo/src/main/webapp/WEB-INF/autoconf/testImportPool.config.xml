<application xmlns:config="http://www.top-logic.com/ns/config/6.0">
	<services>
		<config service-class="com.top_logic.basic.sql.ConnectionPoolRegistry">
			<instance>
				<pools>
					<pool name="testImportPool">
						<sql-dialect class="com.top_logic.basic.sql.H2Helper"
							adjust-from-connection="true"
						/>
						<data-source>
							<driver-class>com.top_logic.basic.sql.H2DataSourceProxy</driver-class>
							<options>
								<option name="url" value="jdbc:h2:%APP_ROOT%/WEB-INF/database/testDdlImport" />
								<option name="user" value="user" />
								<encrypted-option name="password" value="unencrypted:password" />
							</options>
						</data-source>
					</pool>
				</pools>
			</instance>
		</config>
	</services>
</application>