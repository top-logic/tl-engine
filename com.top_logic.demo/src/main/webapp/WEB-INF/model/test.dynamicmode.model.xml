<?xml version="1.0" encoding="utf-8" ?>

<model xmlns="http://www.top-logic.com/ns/dynamic-types/6.0">
	<module name="test.dynamicmode">
		<enum name="Category">
			<classifier name="Consumables"/>
			<classifier name="Investment"/>
		</enum>
		<class name="Acquisition">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<form-definition>
					<form>
						<field
							attribute="name"
							fullQualifiedName="test.dynamicmode:Acquisition#name"
							type="tl.core:String"
						>
							<annotations>
								<render-whole-line/>
							</annotations>
						</field>
						<field
							attribute="critical"
							fullQualifiedName="test.dynamicmode:Acquisition#critical"
							type="tl.core:Boolean"
						/>
						<field
							attribute="category"
							fullQualifiedName="test.dynamicmode:Acquisition#category"
							type="test.dynamicmode:Category"
						/>
						<field
							attribute="price"
							fullQualifiedName="test.dynamicmode:Acquisition#price"
							type="tl.core:Double"
						/>
						<field
							attribute="positions"
							fullQualifiedName="test.dynamicmode:Acquisition#positions"
							type="test.dynamicmode:Position"
						/>
						<field
							attribute="reason"
							fullQualifiedName="test.dynamicmode:Acquisition#reason"
							type="tl.core:Text"
						/>
					</form>
				</form-definition>
			</annotations>
			<attributes>
				<property name="name"
					type="tl.core:String"
				/>
				<property name="price"
					mandatory="true"
					type="tl.core:Double"
				/>
				<property name="reason"
					type="tl.core:Text"
				>
					<annotations>
						<dynamic-visibility>
							<mode-selector class="com.top_logic.model.search.providers.ModeSelectorByExpression">
								<function><![CDATA[obj -> 
    $obj.get(`test.dynamicmode:Acquisition#price`) +
    $obj.get(`test.dynamicmode:Acquisition#positions`).get(`test.dynamicmode:Position#value`).sum() >= 10000 ? "mandatory" : "hidden"]]></function>
							</mode-selector>
						</dynamic-visibility>
					</annotations>
				</property>
				<reference name="positions"
					composite="true"
					kind="forwards"
					multiple="true"
					navigate="true"
					ordered="true"
					type="Position"
				/>
				<reference name="category"
					kind="forwards"
					navigate="true"
					type="Category"
				>
					<annotations>
						<dynamic-visibility>
							<mode-selector class="com.top_logic.model.search.providers.ModeSelectorByExpression">
								<function>x -&gt; $x.get(`test.dynamicmode:Acquisition#critical`) ? "mandatory" : "editable"</function>
							</mode-selector>
						</dynamic-visibility>
					</annotations>
				</reference>
				<property name="critical"
					type="tl.core:Boolean"
				/>
			</attributes>
		</class>
		<class name="Position">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<property name="name"
					mandatory="true"
					type="tl.core:String"
				/>
				<property name="value"
					mandatory="true"
					type="tl.core:Double"
				/>
			</attributes>
		</class>
	</module>
</model>