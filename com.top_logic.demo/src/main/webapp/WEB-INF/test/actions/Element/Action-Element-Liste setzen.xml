<?xml version="1.0" encoding="utf-8" ?>

<t:template
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
	xmlns:t="http://www.top-logic.com/ns/template/1.0"
>
	<t:head>
		<t:settings
			output-format="xml"
			output-xml-header="false"
		/>
		<t:parameters>
			<t:parameter name="kontext"
				type="string"
			/>
			<t:parameter name="attribute"
				type="string"
			/>

			<t:parameter name="value1"
				default=""
				type="string"
			/>
			<t:parameter name="value2"
				default=""
				type="string"
			/>
			<t:parameter name="value3"
				default=""
				type="string"
			/>
		</t:parameters>
	</t:head>
	<t:body>
		<action class="com.top_logic.layout.scripting.runtime.action.ActionChainOp">
			<actions>
				<action class="com.top_logic.layout.scripting.runtime.action.FuzzyGotoActionOp">
					<component config:interface="com.top_logic.layout.scripting.recorder.ref.ui.FuzzyComponentNaming$Name"
						tab-path="Strukturen > Typendemo"
					/>
				</action>
				<action class="com.top_logic.layout.scripting.runtime.action.SelectActionOp"
					change-kind="ABSOLUTE"
				>
					<selection>
						<selectee config:interface="com.top_logic.layout.scripting.recorder.ref.value.object.GlobalVariableRef"
							name="${$kontext}"
						/>
						<selection-state boolean="true"/>
					</selection>
					<selection-model-name config:interface="com.top_logic.layout.scripting.recorder.ref.ui.FuzzyComponentNaming$Name"
						name="com.top_logic.demo/structure/demoTypes/demoTypesView.layout.xml#DemoTypesTree"
						tab-path="Strukturen > Typendemo"
					/>
				</action>
				<action class="com.top_logic.layout.scripting.runtime.action.CommandActionOp"
					command-label="Bearbeiten"
					command-name="ElementSwitchEditCommand"
					component-name="com.top_logic.demo/structure/demoTypes/demoTypesView.layout.xml#DemoTypesEdit"
				>
					<arguments/>
				</action>
				<action class="com.top_logic.layout.scripting.runtime.action.FormInputOp">
					<field-values>
						<value>
							<field-path>
								<field config:interface="com.top_logic.layout.scripting.recorder.ref.field.LabeledFieldRef"
									label="${$attribute}"
								/>
							</field-path>
							<value config:interface="com.top_logic.layout.scripting.recorder.ref.value.ListValue">
								<list>
									<t:if condition="#equals($value1, &quot;&quot;)">
										<t:then/>
										<t:else>
											<entry config:interface="com.top_logic.layout.scripting.recorder.ref.value.object.GlobalVariableRef"
												name="${$value1}"
											/>

											<t:if condition="#equals($value2, &quot;&quot;)">
												<t:then/>
												<t:else>
													<entry config:interface="com.top_logic.layout.scripting.recorder.ref.value.object.GlobalVariableRef"
														name="${$value2}"
													/>

													<t:if condition="#equals($value3, &quot;&quot;)">
														<t:then/>
														<t:else>
															<entry config:interface="com.top_logic.layout.scripting.recorder.ref.value.object.GlobalVariableRef"
																name="${$value3}"
															/>
														</t:else>
													</t:if>
												</t:else>
											</t:if>
										</t:else>
									</t:if>
								</list>
							</value>
						</value>
					</field-values>
					<model-name config:interface="com.top_logic.layout.scripting.recorder.ref.ui.FuzzyComponentNaming$Name"
						name="com.top_logic.demo/structure/demoTypes/demoTypesView.layout.xml#DemoTypesEdit"
						tab-path="Strukturen > Typendemo > Typendemo"
					/>
				</action>
				<action class="com.top_logic.layout.scripting.runtime.action.CommandActionOp"
					command-label="Speichern"
					command-name="defaultSave"
					component-name="com.top_logic.demo/structure/demoTypes/demoTypesView.layout.xml#DemoTypesEdit"
				>
					<arguments/>
				</action>
			</actions>
		</action>
	</t:body>
</t:template>