		  <generalizations>
		    <generalization type="tl.accounts:GroupMember"/>
		  </generalizations>
		</add-class-generalizations>
		<add-class-generalizations name="tl.accounts:Person">
		  <generalizations>
		    <generalization type="tl.accounts:GroupMember"/>
		  </generalizations>
		</add-class-generalizations>
