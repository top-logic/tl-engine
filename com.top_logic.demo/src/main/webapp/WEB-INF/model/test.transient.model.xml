<?xml version="1.0" encoding="utf-8" ?>

<model xmlns="http://www.top-logic.com/ns/dynamic-types/6.0">
	<module name="test.transient">
		<class name="EvalForm">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<form-definition>
					<form columns="ONE">
						<field
							attribute="cnt"
							fullQualifiedName="test.transient:EvalForm#cnt"
							type="tl.core:Integer"
						/>
						<field
							attribute="minNumber"
							fullQualifiedName="test.transient:EvalForm#minNumber"
							type="tl.core:Integer"
						/>
						<field
							attribute="maxNumber"
							fullQualifiedName="test.transient:EvalForm#maxNumber"
							type="tl.core:Integer"
						/>
						<field
							attribute="sum"
							fullQualifiedName="test.transient:EvalForm#sum"
							type="tl.core:Integer"
						/>
					</form>
				</form-definition>
			</annotations>
			<attributes>
				<property name="cnt"
					type="tl.core:Integer"
				/>
				<property name="maxNumber"
					type="tl.core:Integer"
				/>
				<property name="minNumber"
					type="tl.core:Integer"
				/>
				<property name="sum"
					type="tl.core:Integer"
				/>
			</attributes>
		</class>
		<class name="Goto">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<form-definition>
					<form>
						<field
							attribute="text"
							fullQualifiedName="test.transient:Goto#text"
							type="tl.model.wysiwyg:Html"
						>
							<annotations>
								<label-position value="hide-label"/>
							</annotations>
						</field>
					</form>
				</form-definition>
			</annotations>
			<attributes>
				<property name="text"
					type="tl.model.wysiwyg:Html"
				/>
				<property name="name"
					type="tl.core:String"
				>
					<annotations>
						<default-value>
							<string value="Click me!"/>
						</default-value>
					</annotations>
				</property>
			</attributes>
		</class>
		<class name="Row">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<main-properties properties="name,date,number"/>
				<form-definition>
					<form>
						<field
							attribute="name"
							fullQualifiedName="test.transient:Row#name"
							type="tl.core:String"
						>
							<annotations>
								<render-whole-line/>
							</annotations>
						</field>
						<field
							attribute="date"
							fullQualifiedName="test.transient:Row#date"
							type="tl.core:Date"
						/>
						<field
							attribute="number"
							fullQualifiedName="test.transient:Row#number"
							type="tl.core:Integer"
						/>
						<field
							attribute="text"
							fullQualifiedName="test.transient:Row#text"
							type="tl.model.wysiwyg:Html"
						/>
					</form>
				</form-definition>
			</annotations>
			<attributes>
				<property name="name"
					mandatory="true"
					type="tl.core:String"
				/>
				<property name="number"
					type="tl.core:Integer"
				/>
				<property name="date"
					type="tl.core:Date"
				/>
				<property name="text"
					type="tl.model.wysiwyg:Html"
				/>
				<reference name="transientResult"
					kind="forwards"
					navigate="true"
					type="Goto"
				>
					<annotations>
						<storage-algorithm>
							<query>
								<expr><![CDATA[row -> new(`test.transient:Goto`, transient: true)
    ..set(`test.transient:Goto#text`, $row.get(`test.transient:Row#text`))]]></expr>
							</query>
						</storage-algorithm>
					</annotations>
				</reference>
			</attributes>
		</class>
		<class name="SettingsForm">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<form-definition>
					<form columns="ONE">
						<field
							attribute="von"
							fullQualifiedName="test.transient:SettingsForm#von"
							type="tl.core:Date"
						/>
						<field
							attribute="bis"
							fullQualifiedName="test.transient:SettingsForm#bis"
							type="tl.core:Date"
						/>
						<field
							attribute="divisor"
							fullQualifiedName="test.transient:SettingsForm#divisor"
							type="tl.core:Integer"
						/>
					</form>
				</form-definition>
			</annotations>
			<attributes>
				<property name="von"
					type="tl.core:Date"
				>
					<annotations>
						<value-listeners>
							<script>
								<operation><![CDATA[setting -> newValue -> oldValue -> 
  if ($newValue != null && $oldValue != null, {
    currentUntil = $setting.get(`test.transient:SettingsForm#bis`);
    if ($currentUntil != null, {
      newUntilMillis = $currentUntil.toMillis() - $oldValue.toMillis() + $newValue.toMillis();
      $setting.set(`test.transient:SettingsForm#bis`, $newUntilMillis.toDate());
      info(#("Value of attribute ''{0}'' was adjusted to retain the currently set time period."@en, "Der Wert des Attributes ''{0}'' wurde angepasst um den gegenwÃ¤rtig eingestellten Zeitraum beizubehalten."@de).fill(`test.transient:SettingsForm#bis`.label()));
    })
  })]]></operation>
							</script>
						</value-listeners>
					</annotations>
				</property>
				<property name="bis"
					type="tl.core:Date"
				>
					<annotations>
						<constraints>
							<constraint-by-expression>
								<check><![CDATA[value -> object -> if ($value == null, null, {
  from = $object.get(`test.transient:SettingsForm#von`);
  if ($from == null, null,
    if ($from.isDateGreater($value), #("''{0}'' must not be less then ''{1}''"@en, "''{0}'' darf nicht kleiner sein als ''{1}''"@de).fill(`test.transient:SettingsForm#bis`, `test.transient:SettingsForm#von`), null)
  )
})]]></check>
							</constraint-by-expression>
						</constraints>
					</annotations>
				</property>
				<property name="divisor"
					type="tl.core:Integer"
				/>
			</attributes>
		</class>
	</module>
</model>