<?xml version="1.0" encoding="utf-8" ?>

<config:template-call
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
	template="com.top_logic/dialog.template.xml"
>
	<arguments
		createOpenerButtons="false"
		helpID="ID_befdaeee_271c_4205_9d48_85479b9aa712"
	>
		<title title="class.com.top_logic.layout.editor.I18NConstants.DYNAMIC_COMPONENT.com.top_logic.model.search.tableWithDialogs.template.defaults.editDialogTitle"/>
		<open-handler id="editRow"
			config:interface="com.top_logic.layout.editor.config.DialogOpenHandlerConfig"
			image="theme:ICONS_BUTTON_EDIT"
			resourceKey="class.com.top_logic.layout.editor.I18NConstants.DYNAMIC_COMPONENT.com.top_logic.model.search.tableWithDialogs.template.defaults.editButton"
			targetComponent="com.top_logic.demo/technical/components/workflow/properties/advanceTicketTaskEdit.layout.xml#TaskEdit"
		>
			<target class="com.top_logic.model.search.providers.TransformLinkingByExpression"
				function="ticket -> $ticket.get(`test.process:Ticket#activeTokens`).firstElement()"
				input="selection(self())"
			/>
		</open-handler>
		<buttons>
			<button id="showPrevious"
				class="com.top_logic.model.search.providers.CommandHandlerByExpression"
				group="System"
				image="css:fas fa-chevron-left"
				resourceKey="class.com.top_logic.layout.editor.I18NConstants.DYNAMIC_COMPONENT.com.top_logic.model.search.tableWithDialogs.template.defaults.previousObject"
				transaction="false"
			>
				<target class="com.top_logic.layout.channel.linking.impl.CombineLinking">
					<channel name="rows">
						<target name="com.top_logic.demo/technical/components/workflow/ticketsTable.layout.xml#Table"/>
					</channel>
					<channel name="model">
						<target name="com.top_logic.demo/technical/components/workflow/properties/editTicketTaskEdit.layout.xml#TaskEdit"/>
					</channel>
				</target>
				<executability>
					<rule-by-expression show-disabled="true">
						<decision><![CDATA[input -> {
    rows = $input[0];
    model = $input[1];
    index = $rows.elementIndex($model);
    $index > 0 || #"class.com.top_logic.layout.editor.I18NConstants.DYNAMIC_COMPONENT.com.top_logic.model.search.tableWithDialogs.template.defaults.firstRow";
}]]></decision>
					</rule-by-expression>
				</executability>
				<operation><![CDATA[input -> {
    rows = $input[0];
    model = $input[1];
    index = $rows.elementIndex($model);
    $rows[$index - 1];
}]]></operation>
				<postCreateActions>
					<setModel target="model(com.top_logic.demo/technical/components/workflow/properties/editTicketTaskEdit.layout.xml#TaskEdit)">
						<input/>
					</setModel>
					<setModel target="selection(com.top_logic.demo/technical/components/workflow/ticketsTable.layout.xml#Table)">
						<input/>
					</setModel>
				</postCreateActions>
			</button>
			<button id="showNext"
				class="com.top_logic.model.search.providers.CommandHandlerByExpression"
				group="System"
				image="css:fas fa-chevron-right"
				resourceKey="class.com.top_logic.layout.editor.I18NConstants.DYNAMIC_COMPONENT.com.top_logic.model.search.tableWithDialogs.template.defaults.nextObject"
				transaction="false"
			>
				<target class="com.top_logic.layout.channel.linking.impl.CombineLinking">
					<channel name="rows">
						<target name="com.top_logic.demo/technical/components/workflow/ticketsTable.layout.xml#Table"/>
					</channel>
					<channel name="model">
						<target name="com.top_logic.demo/technical/components/workflow/properties/editTicketTaskEdit.layout.xml#TaskEdit"/>
					</channel>
				</target>
				<executability>
					<rule-by-expression show-disabled="true">
						<decision><![CDATA[input -> {
    rows = $input[0];
    model = $input[1];
    index = $rows.elementIndex($model);
    $index < $rows.size() - 1 || #"class.com.top_logic.layout.editor.I18NConstants.DYNAMIC_COMPONENT.com.top_logic.model.search.tableWithDialogs.template.defaults.lastRow"
}]]></decision>
					</rule-by-expression>
				</executability>
				<operation><![CDATA[input -> {
    rows = $input[0];
    model = $input[1];
    index = $rows.elementIndex($model);
    $rows[$index + 1];
}]]></operation>
				<postCreateActions>
					<setModel target="model(com.top_logic.demo/technical/components/workflow/properties/editTicketTaskEdit.layout.xml#TaskEdit)">
						<input/>
					</setModel>
					<setModel target="selection(com.top_logic.demo/technical/components/workflow/ticketsTable.layout.xml#Table)">
						<input/>
					</setModel>
				</postCreateActions>
			</button>
		</buttons>
		<components>
			<layout-reference resource="com.top_logic.demo/technical/components/workflow/properties/innerLayout.layout.xml"/>
		</components>
	</arguments>
</config:template-call>