<?xml version="1.0" encoding="utf-8" ?>

<config:template-call
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
	template="com.top_logic.element/treegrid.template.xml"
>
	<arguments
		adjustSelectionWhenCollapsing="true"
		defaultColumns="name,canProcess,active,processing"
		defaultSelection="false"
		expandSelected="false"
		rootVisible="false"
		type="test.dnd.dropon:Processor"
	>
		<name key="dynamic.c1ccc4ff-77bf-4db3-8c99-3af8e378c83c">
			<en>Processor table</en>
			<de>Bearbeitertabelle</de>
		</name>
		<modelBuilder class="com.top_logic.model.search.providers.TreeModelByExpression"
			finite="true"
			leafPredicate="false"
			modelPredicate="true"
			modelQuery="null"
			nodePredicate="node->$node.instanceOf(`test.dnd.dropon:Processor`) || $node.instanceOf(`test.dnd.dropon:Root`)"
			nodesToUpdate="null"
			parents="node->$node.referers(`test.dnd.dropon:Processor#subprocessors`).union($node.referers(`test.dnd.dropon:Root#processors`))"
			rootNode="`test.dnd.dropon#ROOT`"
		>
			<children><![CDATA[node-> switch($node.type()) {
    `test.dnd.dropon:Root`: $node.get(`test.dnd.dropon:Root#processors`);
    default: $node.get(`test.dnd.dropon:Processor#subprocessors`);
}]]></children>
		</modelBuilder>
		<dropTargets>
			<dropTarget class="com.top_logic.model.search.providers.GridDropTargetByExpression"
				canDrop="draggedObjects -> referenceRow -> true"
				dropType="ROW"
			>
				<handleDrop><![CDATA[draggedObjects -> referenceRow -> {
  $referenceRow == null ? info(#("Bitte lassen Sie die Aufgabe auf einem Bearbeiter fallen."@de , "Please drop the task on a processor."@en)) : {
    !$referenceRow.get(`test.dnd.dropon:Processor#active`) ? info(#("Bearbeiter ist nicht aktiv."@de , "Processor is not active."@en)) : {
      canProcess = $referenceRow.get(`test.dnd.dropon:Processor#canProcess`);
      handleDrop = work -> processor -> {
        !$canProcess.containsElement($work.get(`test.dnd.dropon:WorkItem#type`)) ? 
          throw(#("Der Bearbeiter kann keine Objekte vom Typ {0} bearbeiten."@de, "the processor can not process objects of type {0}."@en).fill($work.get(`test.dnd.dropon:WorkItem#type`))) :
          $referenceRow.add(`test.dnd.dropon:Processor#processing`, $work);
      };
      $draggedObjects.foreach(draggedObject -> $handleDrop($draggedObject,$referenceRow));
    }
  }
}]]></handleDrop>
				<postCreateActions>
					<updateComponent>
						<target name="com.top_logic.demo/technical/components/dropOn/tasksTable.layout.xml#Table"/>
					</updateComponent>
				</postCreateActions>
			</dropTarget>
		</dropTargets>
		<buttons>
			<button id="exportExcelGrid"
				class="com.top_logic.layout.table.export.StreamingExcelExportHandler"
			/>
			<button id="ID_1636a126_adee_4cdd_a987_859c03c6b6ab"
				class="com.top_logic.model.search.providers.CommandHandlerByExpression"
				clique="moveRight"
				group="System"
				image="css:fa-solid fa-arrow-right"
				operation="null"
				transaction="false"
			>
				<resourceKey key="dynamic.e96d1d1a-66e6-499a-8ade-daabe2d8689c">
					<en>Show other tab</en>
					<de>Zeige anderen Tab</de>
				</resourceKey>
				<postCreateActions>
					<showComponent>
						<global-target name="com.top_logic.demo/technical/components/dropOn/tree/tabLayout.layout.xml#TabLayout"/>
					</showComponent>
				</postCreateActions>
			</button>
			<button id="ID_5f228007_aab3_4c3e_8062_086833b950c1"
				class="com.top_logic.layout.component.GenericDeleteCommandHandler"
				target="selection(self())"
			/>
		</buttons>
		<dialogs>
			<layout-reference resource="com.top_logic.demo/technical/components/dropOn/newProcessor/dialog.layout.xml"/>
		</dialogs>
	</arguments>
</config:template-call>