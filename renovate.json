{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "maven"
  ],
    "packageRules": [
    {
      "description": "Standard: alle Maven-Dependencies deaktivieren",
      "matchManagers": ["maven"],
      "enabled": false
    },
    {
      "description": "Nur interne Maven-Dependencies mit Prefix wieder aktivieren",
      "matchManagers": ["maven"],
      "matchPackageNames": ["/^com\\.top-logic:/"],
      "enabled": true,
      "reviewers": ["jenkins", "msi", "bhu", "dbu"],
      "dependencyDashboard": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "commitMessagePrefix": "Administrative change: ",
    "rangeStrategy": "bump",
    "vulnerabilityFixStrategy": "lowest",
    "prCreation": "immediate"
  },
  "osvVulnerabilityAlerts": true
}
