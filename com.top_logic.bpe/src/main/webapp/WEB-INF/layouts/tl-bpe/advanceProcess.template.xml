<?xml version="1.0" encoding="utf-8" ?>

<config:template
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
>
	<properties extends="com.top_logic.mig.html.layout.LayoutComponentUIOptions, com.top_logic.layout.form.component.Editor$UIOptions, com.top_logic.layout.structure.OptionalToolbarOptions, com.top_logic.layout.structure.ButtonbarOptions, com.top_logic.tool.boundsec.InAppSecurityObjectProviderConfig, com.top_logic.tool.boundsec.WithSecurityMaster, com.top_logic.layout.form.component.EditComponent$UIOptions, com.top_logic.layout.editor.config.ButtonTemplateParameters">
		<annotations>
			<display-inherited value="APPEND"/>
		</annotations>
		<property name="modifier"
			instance-type="com.top_logic.element.layout.meta.FormContextModificator"
			type="PolymorphicConfiguration"
		>
			<hidden/>
		</property>
	</properties>

	<component class="com.top_logic.bpe.layout.execution.ActiveTaskComponent"
		applyCommand="storeAttributes"
		buttonbar="${buttonbar}"
		deleteCommand=""
		editExecutability="${editExecutability}"
		editMode="${editMode}"
		isSecurityMaster="${isSecurityMaster}"
		metaElementName="tl.bpe.execution:Token"
		model="${model}"
		modifier="${modifier}"
		name="TaskEdit"
		page="/jsp/processExecution/EditTask.jsp"
		resetInvisible="${resetInvisible}"
		saveClosesDialog="${saveClosesDialog}"
		showMaximize="${showMaximize}"
		showMinimize="${showMinimize}"
		showPopOut="${showPopOut}"
		securityObject="${securityObject}"
		titleKey="${titleKey}"
		toolbar="${toolbar}"
	>
		<buttons>
			${buttons}
			<include name="templates/editComponentCommands.xml"/>
		</buttons>
	</component>
</config:template>