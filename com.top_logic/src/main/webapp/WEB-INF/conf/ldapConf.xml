<?xml version="1.0" encoding="utf-8"?>

<root>
    <alias>
        <entry name="%LDAP_URL%" value="ldap://ldap.your.domain:389"/>
        <entry name="%LDAP_PRINCIPAL%" value="you@your.domain"/>
        <entry name="%LDAP_CREDENTIAL%" value="your-password"/>
        
        <entry name="%LDAP_BASE_DN%" value="DC=YourDC"/>
        <entry name="%LDAP_FILTER%" value="(objectClass=Person)" comment="Filter is applied to group members. When no group given, this query alone is used to determine user entries"/>
        
        <entry name="%LDAP_GROUP_1%" value="CN=YourCN,DC=YourDC"/>
        <entry name="%LDAP_GROUP_2%" value=""/>
        <entry name="%LDAP_GROUP_3%" value=""/>

        <entry name="%LDAP_ALLOW_PWD_CHANGE%" value="false"/>
        <entry name="%LDAP_NESTED_GROUPS%" value="false"/>

        <entry name="%LDAP_MAPPING_ALL%" value="/WEB-INF/database/ldap/all-mapping.properties"/>
        <entry name="%LDAP_MAPPING_PERSON%" value="/WEB-INF/database/ldap/person-mapping.properties"/>
        <entry name="%LDAP_MAPPING_GROUP%" value="/WEB-INF/database/ldap/group-mapping.properties"/>
	</alias>
	
    <properties>
	</properties>
</root>
